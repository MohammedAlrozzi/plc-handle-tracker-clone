<!doctype html>
<html lang=en>
<head>
  <meta charset=utf-8>
  <meta name="viewport" content="width=device-width" />

  <title>
    #if(title): #(title) | @handle and did:plc Tracker
    #else: @handle and did:plc Tracker
    #endif
  </title>

<style id=base-style>
:root {
  font-family: sans-serif;
  background: #fff;
  color: #242424;
}

@media (prefers-color-scheme: dark) {
  :root {
    background: #000;
    color: #dbdbdb;
  }
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  margin: 0 auto;
  width: max-content;
  max-width: 100vw;
}

body > header {
  padding: 16px;
}

#app-title {
  margin: 0;
  font-size: 1.5rem;
  font-weight: normal;
  text-align: center;
}

#app-title > a {
  color: currentColor;
  text-decoration: none;
}

main {
  flex: auto;
  padding: 8px;
}

#page-title {
  margin-top: 0;
  font-size: 1.6rem;
  text-align: center;
}

body > footer {
  padding: 16px;
}

#license {
  margin: 0;
  text-align: center;
}

.handle, .did-plc {
  font-family: monospace, serif;
}
</style>

#import("head")
</head>

<body>
  <header>
    #if(title): <p id=app-title><a href=/><span class=handle>@handle</span> and <span class=did-plc>did:plc</span> Tracker</a></p>
    #else: <h1 id=app-title><span class=handle>@handle</span> and <span class=did-plc>did:plc</span> Tracker</h1>
    #endif
  </header>
  <main>
    #if(title): <h1 id=page-title>#(title)</h1> #endif
    #import("body")
  </main>
  <footer>
    <p id=license><small>
      (c) 2023 kphrx.
      <a rel=noopener target=_blank href=https://github.com/kphrx/plc-handle-tracker/blob/master/LICENSE>MIT lisenced</a>.
    </small></p>
  </footer>
</body>
</html>
